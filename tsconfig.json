{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "jsx": "react",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true
  }
}